procedure if_OS_Crypto {
    include "OS_Crypto.h";
    include "rpc/CryptoLibServer.h";

    // ---------------------------------- RNG ----------------------------------

    OS_Error_t
    Rng_getBytes
    (
        in unsigned int flags,
        in size_t bufSize
    );
    OS_Error_t
    Rng_reseed
    (
        in size_t seedLen
    );

    // ---------------------------------- MAC ----------------------------------

    OS_Error_t
    Mac_init
    (
        inout CryptoLibMac_ptr pMacObj,
        in CryptoLibKey_cptr keyObj,
        in unsigned int algorithm
    );
    OS_Error_t
    Mac_free
    (
        in CryptoLibMac_ptr macObj
    );
    OS_Error_t
    Mac_process
    (
        in CryptoLibMac_ptr macObj,
        in size_t dataSize
    );
    OS_Error_t
    Mac_finalize
    (
        in CryptoLibMac_ptr macObj,
        inout size_t macSize
    );

    // -------------------------------- Digest ---------------------------------

    OS_Error_t
    Digest_init
    (
        inout CryptoLibDigest_ptr pDigestObj,
        in unsigned int algorithm
    );
    OS_Error_t
    Digest_clone
    (
        inout CryptoLibDigest_ptr pDigestObj,
        in CryptoLibDigest_cptr srcDigestObj
    );
    OS_Error_t
    Digest_free
    (
        in CryptoLibDigest_ptr digestObj
    );
    OS_Error_t
    Digest_process
    (
        in CryptoLibDigest_ptr digestObj,
        in size_t inLen
    );
    OS_Error_t
    Digest_finalize
    (
        in CryptoLibDigest_ptr digestObj,
        inout size_t digestSize
    );

    // --------------------------------- Key -----------------------------------

    OS_Error_t
    Key_generate
    (
        inout CryptoLibKey_ptr pKeyObj
    );
    OS_Error_t
    Key_makePublic
    (
        inout CryptoLibKey_ptr pPubKeyObj,
        in CryptoLibKey_cptr prvKeyObj
    );
    OS_Error_t
    Key_import
    (
        inout CryptoLibKey_ptr pKeyObj
    );
    OS_Error_t
    Key_export
    (
        in CryptoLibKey_cptr keyObj
    );
    OS_Error_t
    Key_getParams
    (
        in CryptoLibKey_cptr keyObj,
        inout size_t paramSize
    );
    OS_Error_t
    Key_getAttribs
    (
        in CryptoLibKey_cptr keyObj
    );
    OS_Error_t
    Key_loadParams
    (
        in OS_CryptoKey_Param_t name,
        inout size_t paramSize
    );
    OS_Error_t
    Key_free
    (
        in CryptoLibKey_ptr keyObj
    );

    // ------------------------------- Signature -------------------------------

    OS_Error_t
    Signature_init
    (
        inout CryptoLibSignature_ptr pSigObj,
        in CryptoLibKey_cptr prvObj,
        in CryptoLibKey_cptr pubObj,
        in unsigned int algorithm,
        in unsigned int digest
    );
    OS_Error_t
    Signature_verify (
        in CryptoLibSignature_ptr sigObj,
        in size_t hashSize,
        in size_t signatureSize
    );
    OS_Error_t
    Signature_sign
    (
        in CryptoLibSignature_ptr sigObj,
        in size_t hashSize,
        inout size_t signatureSize
    );
    OS_Error_t
    Signature_free
    (
        in CryptoLibSignature_ptr sigObj
    );

    // ----------------------------- Agreement ---------------------------------

    OS_Error_t
    Agreement_init
    (
        inout CryptoLibAgreement_ptr pAgrObj,
        in CryptoLibKey_cptr prvObj,
        in unsigned int algorithm,
    );
    OS_Error_t
    Agreement_agree
    (
        in CryptoLibAgreement_ptr agrObj,
        in CryptoLibKey_cptr pubObj,
        inout size_t sharedSize
    );
    OS_Error_t
    Agreement_free
    (
        in CryptoLibAgreement_ptr agrObj
    );

    // -------------------------------- Cipher ---------------------------------

    OS_Error_t
    Cipher_init
    (
        inout CryptoLibCipher_ptr pCipherObj,
        in CryptoLibKey_cptr keyObj,
        in unsigned int algorithm,
        in size_t ivLen
    );
    OS_Error_t
    Cipher_free
    (
        in CryptoLibCipher_ptr cipherObj
    );
    OS_Error_t
    Cipher_process
    (
        in CryptoLibCipher_ptr cipherObj,
        in size_t inLen,
        inout size_t outSize
    );
    OS_Error_t
    Cipher_start
    (
        in CryptoLibCipher_ptr cipherObj,
        in size_t len
    );
    OS_Error_t
    Cipher_finalize
    (
        in CryptoLibCipher_ptr cipherObj,
        inout size_t len
    );
};